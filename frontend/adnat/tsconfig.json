{
  "compilerOptions": {
    "sourceMap": true,
    "module" : "commonJS",
    "target": "es6",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "components/*": [
        "src/components/*",
        "src/features/*",
        "src/helpers/*",
        "src/layout/*",
      ]
    }

  },
  "include": [
    "src"
  ]
}
